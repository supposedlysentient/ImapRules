    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Core/bin/Debug/net8.0/Core",
            "args": [
                "--config",
                "${workspaceFolder}/scratch/server.json",
                "--daemonize"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "justMyCode": false
        },
        {
            "name": "Debug tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build tests",
            "program": "${workspaceFolder}/tests/bin/Debug/net8.0/Tests",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}
